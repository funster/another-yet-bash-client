<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- theme colors -->
        <item name="colorPrimary">@color/app_color_primary_dark</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="@android:attr/windowBackground">@color/app_color_primary_dark</item>

        <item name="@android:attr/activatedBackgroundIndicator">@drawable/list_selector_dark</item>

        <!-- drawables -->
        <item name="settings_icon">@drawable/ic_settings_white_24dp</item>
        <item name="settings_icon_reverse">@drawable/ic_settings_black_24dp</item>
        <item name="share_icon">@drawable/ic_share_white_36dp</item>
        <item name="favorite_empty_icon">@drawable/ic_star_outline_white_38dp</item>
        <item name="favorite_full_icon">@drawable/ic_star_white_38dp</item>
        <item name="btn_borderless">@drawable/btn_borderless</item>
        <item name="ripple">@color/ripple_material_dark</item>

        <!-- ab -->
        <item name="actionBarStyle">@style/AppActionBar</item>

        <item name="colorAccent">@android:color/white</item>
    </style>


    <style name="AppBaseTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Application light theme. -->
    </style>

    <style name="AppTheme.Light" parent="AppBaseTheme.Light">
        <!-- theme colors -->
        <item name="colorPrimary">@color/app_colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_colorPrimaryDark</item>

        <item name="@android:attr/activatedBackgroundIndicator">@drawable/list_selector_light</item>

        <!-- drawables -->
        <item name="settings_icon">@drawable/ic_settings_black_24dp</item>
        <item name="settings_icon_reverse">@drawable/ic_settings_white_24dp</item>
        <item name="share_icon">@drawable/ic_share_black_36dp</item>
        <item name="favorite_empty_icon">@drawable/ic_star_outline_black_38dp</item>
        <item name="favorite_full_icon">@drawable/ic_star_black_38dp</item>
        <item name="btn_borderless">@drawable/btn_borderless_light</item>
        <item name="ripple">@color/ripple_material_light</item>
        <!-- customize the color palette -->

        <!-- ab -->
        <item name="actionBarStyle">@style/AppActionBar.Light</item>

        <item name="colorAccent">@color/app_colorPrimary</item>
    </style>

    <style name="listItemText" parent="android:TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <declare-styleable name="AppBaseTheme">
        <attr name="settings_icon" format="reference" />
        <attr name="settings_icon_reverse" format="reference" />
        <attr name="share_icon" format="reference" />
        <attr name="favorite_empty_icon" format="reference" />
        <attr name="favorite_full_icon" format="reference" />
        <attr name="btn_borderless" format="reference" />
        <attr name="ripple" format="color" />
        <attr name="refresh_icon" format="reference" />
        <attr name="back_arrow_icon" format="reference" />
        <attr name="forward_arrow_icon" format="reference" />
        <attr name="search_icon" format="reference" />
    </declare-styleable>

    <style name="AppActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="refresh_icon">@drawable/ic_refresh_white_48dp</item>
        <item name="back_arrow_icon">@drawable/ic_arrow_back_white_48dp</item>
        <item name="forward_arrow_icon">@drawable/ic_arrow_forward_white_48dp</item>
        <item name="search_icon">@drawable/ic_search_white_48dp</item>
    </style>

    <style name="AppActionBar.Light" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="refresh_icon">@drawable/ic_refresh_black_48dp</item>
        <item name="back_arrow_icon">@drawable/ic_arrow_back_black_48dp</item>
        <item name="forward_arrow_icon">@drawable/ic_arrow_forward_black_48dp</item>
        <item name="search_icon">@drawable/ic_search_black_48dp</item>
    </style>

</resources>
